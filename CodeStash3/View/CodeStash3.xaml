<Window x:Class="CodeStash3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeStash3"
        xmlns:viewModel="clr-namespace:CodeStash3.ViewModel"
        mc:Ignorable="d"
        Title="CodeStash3" Height="480" Width="640">
    <!--<Window.DataContext>
        <viewModel:CodeStash3ViewModel/>
    </Window.DataContext>-->
    <Window.Resources>
        <local:noConverter x:Key="noConverter"></local:noConverter>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="languageComboBox" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="10" Width="100"/>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
            <TextBox x:Name="searchTextBox" Height="20" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Search Snippet" Margin="10,10,0,10" Width="140" />
        </StackPanel>
        <ListView x:Name="listView" Margin="10,0,0,0" Grid.Row="1" ItemsSource="{Binding Snippets, Mode=TwoWay}" DisplayMemberPath="Title" 
                  SelectedItem="{Binding SelectedSnippet, Mode=TwoWay, Converter={StaticResource noConverter}}">
            
        </ListView>
        <TextBox x:Name="textBox" Grid.Column="1" Grid.Row="1" Margin="10,0" AcceptsTab="True" AcceptsReturn="True" Text ="{Binding SelectedSnippet.Code, Converter={StaticResource noConverter}, UpdateSourceTrigger=PropertyChanged}" LostFocus="textBox_LostFocus" GotFocus="textBox_GotFocus" TextChanged="textBox_TextChanged">
                    
        </TextBox>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
            <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Height="20" Margin="10,10,0,10" Grid.Row="2" VerticalAlignment="Top" Width="55" 
                    Command="ApplicationCommands.New"/>
            <Button x:Name="deleteButton" Content="Delete" Height="20" Margin="30,10,0,0" VerticalAlignment="Top" Width="55" HorizontalAlignment="Right"/>
        </StackPanel>
        <Button x:Name="saveButton" Content="Save" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="175,10" Grid.Row="2" VerticalAlignment="Top" Width="55"/>

    </Grid>
</Window>
